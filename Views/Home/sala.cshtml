
@{
    Layout = null;
}

<header>
    <h1>Encabezado</h1>
</header>

<body>

    <link href="~/Content/sala.css" rel="stylesheet" />
    <script src="~/Scripts/agregar.js"></script>
</body>


@model List<Adondevamos.Models.Perfil>

<h2>Usuarios en la sala</h2>

<ul>
    @foreach (var usuario in Model)
