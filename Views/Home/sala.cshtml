        <li>@usuario.Nombre</li>
    }
</ul>


<div class="sala-externa">
    <div class="sala-interna">
        <div class="persona">Persona 1</div>
        <div class="persona">Persona 2</div>
        <div class="persona">Persona 3</div>



        <div id="formularioUsuario" style="display: none">
            @Html.Partial("Perfil")
        </div>
        @*@model Adondevamos.Models.Perfil*@

        @using (Html.BeginForm("Perfil", "Home", FormMethod.Post, new { id = "Perfil" }))
        {

            <!-- Otros campos del usuario -->
            <button id="agregarUsuario">+</button>
        }




    </div>
</div>


